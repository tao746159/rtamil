    .rt-input 
      border-bottom: 1px solid #b7b7b7
      display: flex
      position relative
      input 
        flex: 1
        outline: none
        height 1.5rem
        border: none
        background: #f7f7f7
      span 
        font-size: .85rem
        line-height: 1.5rem
        min-width 4rem
        text-align: right 
      p.error
        display: block
        color: red
        position: absolute
        bottom: -1.2rem