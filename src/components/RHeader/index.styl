@import './../../stylus/color.styl'
.r-header
  height 2rem
  line-height 2rem
  background $color_gray
  text-align center
  color #ffffff
  font-size 14px
  padding 0 1rem
  position fixed
  width 100%
  top 0
  z-index 1
  box-sizing: border-box
  left 0
  .hreder-back, .hreder-cart
    position absolute
  .hreder-back
    color: #ffffff
    left 1rem
  .hreder-cart
    right 1rem